@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;">Список ролей</h2>
<hr />
<div class="col g-4">
    <table class="table table-striped table-success table-hover">
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" style="border-radius:8px;" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <a class="btn btn-success btn-sm" style="border-radius:6px;" asp-action="Create">Добавить роль</a>   
    <a class="btn btn-primary btn-sm" style="border-radius:6px;" asp-action="UserList">Список пользователей</a>
</div>
