@using Microsoft.AspNetCore.Identity
@model MyWritingPlatform.ViewModels.ChangeRoleViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Изменение ролей для пользователя @Model.UserEmail</h2>

<form class="needs-validation" novalidate asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" style="border-radius:8px;" class="btn btn-primary">Сохранить</button>
</form>

