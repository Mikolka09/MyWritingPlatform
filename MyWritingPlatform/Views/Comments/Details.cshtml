@model MyWritingPlatform.Models.Comment

@{
    ViewData["Title"] = "Details";
    var user = await UserManager.GetUserAsync(User);
    if (user.Login == "Admin")
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    else
        Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 style="text-align:center;">Данные о комментарии</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Published)
                </dt>
                <dd class="col-sm-10">
                    @Model.Published.ToLongDateString()
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Login)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Login)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Post.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Post.Title)
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>