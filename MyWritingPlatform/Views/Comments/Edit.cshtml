@model MyWritingPlatform.Models.Comment

@{
    ViewData["Title"] = "Edit";
    var user = await UserManager.GetUserAsync(User);
    if (user.Login == "Admin")
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    else
        Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 style="text-align:center;">Редактирование комментария</h1>

<hr />
<div class="row">
    <div class="col-md-10 offset-sm-1">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" style="height: 300px"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" style="border-radius:8px;" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="margin-left:40px;" asp-action="Index">Back to List</a>
</div>

