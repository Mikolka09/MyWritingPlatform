@model MyWritingPlatform.Models.Comment

@{
    ViewData["Title"] = "Delete";
    var user = await UserManager.GetUserAsync(User);
    if (user.Login == "Admin")
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    else
        Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 style="text-align:center;">Удаление комментария</h1>

<h3 style="margin-left:40px;">Вы уверены, что хотите удалить это?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Published)
                </dt>
                <dd class="col-sm-10">
                    @Model.Published.ToLongDateString()
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Login)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Login)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Post.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Post.Title)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" style="border-radius:8px;" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>