@model MyWritingPlatform.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Редактирование пользователя";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center;">Редактирование пользователя</h2>
<div class="col-md-4 g-4">
    <form class="needs-validation" novalidate asp-action="Edit" asp-controller="UserDashboard" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Avatar"></label><br />
            <img src=@Model.Avatar class="rounded-circle d-block"  style="width:70px;"/>
            <input class="form-control" name="AvatarFile" type="file" />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="FirstName"></label><br />
            <input class="form-control" asp-for="FirstName" required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="LastName"></label><br />
            <input class="form-control" asp-for="LastName" required />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Login"></label><br />
            <input class="form-control" asp-for="Login" required />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Email"></label><br />
            <input class="form-control" asp-for="Email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Year"></label><br />
            <input class="form-control" asp-for="Year" required />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" style="border-radius:8px;" class="btn btn-primary" value="Сохранить" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" style="margin-left:10px;">Back to List</a>
</div>


