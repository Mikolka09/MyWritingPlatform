@model MyWritingPlatform.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center;">Изменение пароля</h2>
<div class="row">
    <div class="col-md-4 offset-sm-1">
        <form asp-action="ChangePassword" asp-controller="UserDashboard">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label">Старый пароль</label>
                <input type="text" asp-for="OldPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">Новый пароль</label>
                <input type="text" asp-for="NewPassword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" style="border-radius:8px;" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a style="margin-left: 40px; border-radius: 6px;" class="btn btn-info btn-sm" asp-action="Index">Back to List</a>
</div>


