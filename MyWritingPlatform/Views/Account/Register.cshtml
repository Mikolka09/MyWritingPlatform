@model MyWritingPlatform.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Регистрация нового пользователя</h2>
<hr/>
<div class="row">
    <div class="col-md-4 offset-md-1">
        <form method="post" asp-controller="Account" asp-action="Register" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label class="form-label" asp-for="Avatar"></label><br />
                <input name="AvatarFile" type="file" />
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="FirstName"></label><br />
                <input class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="LastName"></label><br />
                <input class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Login"></label><br />
                <input class="form-control" asp-for="Login" />
                <span asp-validation-for="Login"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Email"></label><br />
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Year"></label><br />
                <input class="form-control" asp-for="Year" />
                <span asp-validation-for="Year"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Password"></label><br />
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="PasswordConfirm"></label><br />
                <input class="form-control" asp-for="PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <br />
            <div>
                <input type="submit" class="btn btn-primary" value="Регистрация" />
            </div>
        </form>
    </div>
</div>