@model MyWritingPlatform.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header-->
<header class="masthead" style="background-image: url('../assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>The Writing Platform</h1>
                    <span class="subheading">A Blog Writing Platform</span>
                </div>
            </div>
        </div>
    </div>
</header>
<h2 style="text-align:center;">Регистрация нового пользователя</h2>
<hr />
<div class="row">
    <div class="col-md-4 offset-md-1">
        <form class="needs-validation" novalidate method="post" asp-controller="Account" asp-action="Register" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="form-label" asp-for="Avatar"></label><br />
                <input class="form-control" name="AvatarFile" type="file" />
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="FirstName"></label><br />
                <input class="form-control" placeholder="Иван" asp-for="FirstName" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="LastName"></label><br />
                <input class="form-control" placeholder="Иванов" asp-for="LastName" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Login"></label><br />
                <input class="form-control" placeholder="Ivan" asp-for="Login" required />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Email"></label><br />
                <input class="form-control" placeholder="ivan@mail.com" asp-for="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Year"></label><br />
                <input class="form-control" placeholder="1988" asp-for="Year" required />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Password"></label><br />
                <input class="form-control" placeholder="_Aa123456" asp-for="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="PasswordConfirm"></label><br />
                <input class="form-control" placeholder="_Aa123456" asp-for="PasswordConfirm" required />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <br />
            <div>
                <input type="submit" style="border-radius:8px;" class="btn btn-primary" value="Регистрация" />
            </div>
        </form>
    </div>
</div>