@model MyWritingPlatform.Models.Tag

@{
    ViewData["Title"] = "Edit";
    var user = await UserManager.GetUserAsync(User);
    if (user.Login == "Admin")
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    else
        Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 style="text-align:center;">Редактирование тега</h1>

<hr />
<div class="row">
    <div class="col-md-4 offset-sm-1">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" style="border-radius:8px;" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a style="margin-left: 40px; border-radius: 6px;" class="btn btn-info btn-sm" asp-action="Index">Back to List</a>
</div>

