@model MyWritingPlatform.Models.Post

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var k = 0;
}

<h1 style="text-align:center;">Данные о публикации</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImgPost)
                </dt>
                <dd class="col-sm-10">
                    <img src=@Model.ImgPost class="rounded-circle d-block" alt="ImgPost" style="width: 70px;" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ShortDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShortDescription)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Published)
                </dt>
                <dd class="col-sm-10">
                    @Model.Published.ToLongDateString()
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Censor)
                </dt>
                <dd class="col-sm-10">
                    @((Model.Censor==false)? "Не проверена!": "Проверена!")
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Login)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Login)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tags)
                </dt>
                <dd class="col-sm-10">
                    <select class="form-select" required aria-label="select example">
                        @foreach (var it in Model.Tags)
                        {
                            <option value="@k++">@it.Name</option>
                        }
                    </select>
                </dd>
            </dl>
            <div>
                <a class="btn btn-primary btn-sm" style="border-radius:6px;" asp-action="EditPost" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-info btn-sm" style="border-radius:6px;" asp-action="IndexPost">Back to List</a>
            </div>
        </div>
    </div>
</div>